<?xml version="1.0"?>
<configuration>
  {% if kerberos_enabled %}
  <property>
    <name>mapreduce.jobhistory.keytab</name>
    <value>/share/keytabs/hadoop-master1/jhs.service.keytab</value>
  </property>
  <property>
    <name>mapreduce.jobhistory.principal</name>
    <value>jhs/_HOST@TEST.ORG</value>
  </property>
  {% endif %}
  <property>
    <name>mapreduce.jobtracker.address</name>
    <value>hadoop-master1.orb.local:8021</value>
  </property>
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>
  <property>
    <name>mapreduce.jobhistory.address</name>
    <value>hadoop-master1.orb.local:10020</value>
  </property>
  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value>hadoop-master1.orb.local:19888</value>
  </property>
  <property>
    <name>mapreduce.task.tmp.dir</name>
    <value>/var/lib/hadoop-mapreduce/cache/${user.name}/tasks</value>
    <description>To set the value of tmp directory for map and reduce tasks.</description>
  </property>
  <property>
    <name>yarn.app.mapreduce.am.env</name>
    <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
  </property>
  <property>
    <name>mapreduce.map.env</name>
    <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
  </property>
  <property>
    <name>mapreduce.reduce.env</name>
    <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
  </property>
</configuration>
